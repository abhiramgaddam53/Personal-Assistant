# Example environment configuration
# Copy this file to .env and fill in your actual values

# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_cx_here

# Gmail Configuration
GMAIL_USERNAME=your_email@gmail.com
GMAIL_PASSWORD=your_app_specific_password_here
GMAIL_RECIPIENT=recipient@gmail.com

# Database Configuration (Supabase PostgreSQL)
DB_HOST=your-database-host.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.your_project_id
DB_PASSWORD=your_database_password

# Google Services
SERVICE_ACCOUNT_FILE=./data/service-account.json
SHEET_ID=your_google_sheet_id_here

# LLM Configuration
LLM_MODEL=models/gemini-2.0-flash-exp
LLM_TEMPERATURE=0.1

# Scheduler Configuration
DAILY_SUMMARY_TIME=06:00

# Logging
LOG_LEVEL=INFO

# Email Fetch Configuration
MAX_EMAILS_TO_FETCH=5

# Timezone
TIMEZONE=Asia/Kolkata
